<Window x:Class="ProjetUDAFAdmin.ListArticle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetUDAFAdmin"
        mc:Ignorable="d"
        Title="ListArticle" Height="450" Width="800">
    <Grid Background="#FF3FA1A6">
        <WrapPanel x:Name="WrpArticle" Margin="10,65,10,10" SizeChanged="WrpSizeChanged"/>
        <Button x:Name="BtnAddArticle" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="10,10,0,0" Height="50" Click="BtnAddArticle_Click">
            <Viewbox>
                <TextBlock Text="Écrire un nouvel article"></TextBlock>
            </Viewbox>
        </Button>
        <Button x:Name="BtnRetour" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Margin="682,10,10,0" Height="50" Click="BtnRetour_Click">
            <Viewbox>
                <TextBlock Text="Retour" HorizontalAlignment="Right"></TextBlock>
            </Viewbox>
        </Button>
    </Grid>
</Window>
