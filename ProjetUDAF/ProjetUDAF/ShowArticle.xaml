<Window x:Class="ProjetUDAF.ShowArticle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetUDAF"
        mc:Ignorable="d"
        Title="ShowArticle" Height="450" Width="800">
    <Grid Background="#FF3FA1A6">
        <Viewbox Height="50" VerticalAlignment="Top" Margin="10,10,90,0">
            <TextBlock x:Name="TxtTitre" TextWrapping="Wrap">Titre</TextBlock>
        </Viewbox>
        <Viewbox Margin="15,65,10,97">
            <TextBlock x:Name="TxtContenu" TextWrapping="Wrap"/>
        </Viewbox>
        <Viewbox Margin="15,359,403,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="50">
            <TextBlock x:Name="TxtDate" TextWrapping="Wrap" Text="TextBlock"/>
        </Viewbox>
        <Viewbox Margin="394,359,5,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="50">
            <TextBlock x:Name="TxtAuteur" TextWrapping="Wrap" Text="TextBlock"/>
        </Viewbox>
        <Button x:Name="BtnRetour" Content="Retour" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="707,10,10,0" Height="50" Click="BtnRetour_Click"/>
    </Grid>
</Window>
